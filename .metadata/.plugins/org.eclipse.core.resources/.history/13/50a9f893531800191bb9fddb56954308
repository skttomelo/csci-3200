package problem3;

import java.util.Comparator;

public class PerimeterComparator extends Rectangle implements Comparator<Rectangle>{

	public PerimeterComparator(int w, int h) {
		super(w, h);
		// TODO Auto-generated constructor stub
	}

	@Override
	public int compare(Rectangle arg0, Rectangle arg1) {
		if(arg0.getPerimeter()>arg1.getPerimeter()){
			return 1;
		}else return 0;
	}
}
